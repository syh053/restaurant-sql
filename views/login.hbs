<div class="mt-3">
    {{> message}}
</div>


<div class="card login-page">

    <div class="card-header">
        LOGIN
    </div>

    <div class="card-body">
        <form id="login-submit" action="/login" method="post">
        
            <div class="d-flex align-items-center row row-cols-2">
                <div class="col-3">
                    <label for="email" class="form-label">Email :</label>
                </div>
                <div class="col-9">
                    <input type="email" name="email" class="form-control" id="email" required>
                </div>
            </div>
        
            <div class="d-flex align-items-center row row-cols-2 mt-3">
                <div class="col-3">
                    <label for="password" class="form-label">Password :</label>
                </div>
                <div class="col-9">
                    <input type="password" name="password" class="form-control" id="password">
                </div>
            </div>
        
            <div id="submit" class="d-flex justify-content-end align-items-center mt-3">
                <span class="mx-3">No account?<a class="ms-1" href="/registers">Register</a></span>
        
                <button id="submit" type="submit" class="btn btn-primary me-3"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
            
       
        </form>

                <form id="facebook-submit" action="/auth/facebook" method="get" style="display: inline;">
                    <button type="submit" class="btn btn-primary"><i class="fa-brands fa-facebook me-2"></i>Facebook Login</button>
                </form>

            </div>

    </div>

</div>