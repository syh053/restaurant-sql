<h4 class="creat-list">建立餐廳</h4>

<div class="container border shadow p-3 mb-5 bg-body-tertiary rounded my-4">

    {{> message}}

    <div class="row row-cols-8">
        <form class="new-form my-5" action="/restaurants/" method="post">

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="name" class="form-label pt-2">名稱</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div></div>
                <div></div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="en_name" class="form-label pt-2">英文名稱 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="en_name" name="en_name">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="category" class="form-label">餐廳類型</label>
                </div>
                <div class="col-8">
                    <input class="form-control" list="categorys" id="category" name="category" placeholder="選擇餐廳類型">
                    <datalist id="categorys">
                        <option>中東料理</option>
                        <option>日本料理</option>
                        <option>義式餐廳</option>
                        <option>美式</option>
                        <option>酒吧</option>
                        <option>咖啡</option>
                        <option>其他</option>
                    </datalist>
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="photo_source" class="form-label pt-2">照片連結 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="photo_source" name="photo_source">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="address" class="form-label pt-2">地址 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="address" name="address">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="phone" class="form-label pt-2">電話 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="phone" name="phone">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="google_address" class="form-label pt-2">Google 地址 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="google_address" name="google_address">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="rating" class="form-label pt-2">評價 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="number" step="0.1" max="5" min="0" value="3" class="form-control" id="rating" name="rating">
                </div>
            </div>

            <div class="row row-cols-2 mb-3">
                <div class="col-3 text-center">
                    <label for="description" class="form-label pt-2">描述 (選填)</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="description" name="description">
                </div>
            </div>

            <div class="row row-cols-2 mb-3 mt-4">
                <div class="col-3 text-center"></div>
                <div class="col-8 d-flex justify-content-end">
                    <button type="submit" class="submit-button btn btn-primary">Submit</button>
                </div>
            </div>

        </form>
    </div>
</div>